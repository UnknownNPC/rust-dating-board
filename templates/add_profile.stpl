<!DOCTYPE html>
<html lang="en">

<head>
    <% include!("./includes/head_body.stpl"); %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css"
            crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/css/fileinput.min.css" media="all"
            rel="stylesheet" type="text/css" />
</head>

<body>
    <% include!("./includes/nav.stpl"); %>

        <div class="container">
            <p class="h1">Нова анкета</p>
            <form>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" id="name_id" value="<%= profile_dto.name %>"
                            placeholder="Ім'я">
                    </div>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" id="height_id" value="<%= profile_dto.height %>"
                            placeholder="Зріст">
                    </div>
                    <div class="form-group col-md-4">
                        <select class="custom-select" id="inlineFormCustomSelectPref">
                            <option selected>Місто</option>
                            <option value="1">Київ</option>
                            <option value="2">Харків</option>
                            <option value="3">Одеса</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <textarea class="form-control" id="description_id" value="<%= profile_dto.description %>"
                            rows="4" placeholder="Опис"></textarea>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="file-loading">
                            <input id="input-700" name="kartik-input-700[]" type="file" multiple>
                        </div>
                    </div>
                </div>
            </form>
        </div>

</body>

<% include!("./includes/extra_scripts.stpl"); %>
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-fileinput@5.5.2/js/fileinput.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#input-700").fileinput({
                uploadUrl: "/photo/upload",
                enableResumableUpload: true,
                maxFileCount: 5,
                autoUpload: true,
                multiple: true,
                duplicate: false,
                maxSize: 100000,
                allowedFileExtensions: ["jpg", "jpeg"],

                // initialPreviewConfig: [
                //     {
                //         caption: 'desert.jpg',
                //         width: '120px',
                //         url: '/localhost/avatar/delete',
                //         key: 100,
                //         extra: { id: 100 }
                //     }],

                browseLabel: "Вибрати світлини",
                dropZoneTitle: "Перетягніть світлини у зону автоматичної загрузки",
                dropZoneClickTitle: "<br\>(або нажміть для вибору файлів)",
                fileActionSettings: {
                    showZoom: false,
                    showRotate: false,
                    showUpload: false
                },
                showPause: false,
                showCancel: false,
                showBrowse: false,
                showUpload: false,
                showCaption: false,
                showRemove: false,
                showClose: false,
                browseOnZoneClick: true
            }).on('filebatchselected', function (event, previewId, index, fileId) {
                console.log('File uploaded', previewId, index, fileId);
            }).on('fileremoved', function (event, key, jqXHR, data) {
                console.log('name = ' + key);
            });;
        });
    </script>

</html>